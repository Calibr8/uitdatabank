<?php

/**
 * @file
 * Add/remove default UiTdatabank image.
 */

use Drupal\file\Entity\File;
use Drupal\uitdatabank\Form\UitdatabankConfiguration;

/**
 * Implements hook_install().
 */
function uitdatabank_install() {

  // Create the uitdatabank directory and ensure it's writable.
  $directory = file_default_scheme() . '://' . UitdatabankConfiguration::IMAGE_DIRECTORY;
  $mode = isset($GLOBALS['install_state']['mode']) ? $GLOBALS['install_state']['mode'] : NULL;
  if (file_prepare_directory($directory, FILE_CREATE_DIRECTORY | FILE_MODIFY_PERMISSIONS, $mode)) {


    $default_image = UitdatabankConfiguration::DEFAULT_IMAGE;
    // Add default image as managed file.
    $source = drupal_get_path('module', 'uitdatabank') . "/images/$default_image";
    if (file_exists($source)) {
      $path = file_unmanaged_copy($source, $directory, FILE_EXISTS_REPLACE);

      if ($path) {
        $file = File::create([
          'uid' => 1,
          'filename' => $default_image,
          'uri' => $path,
          'status' => 1,
        ]);
        $file->save();

        if ($file->id()) {
          \Drupal::configFactory()
            ->getEditable('uitdatabank.settings.defaults')
            ->set('image', $file->id())
            ->save();
        }
      }
    }
  }
}

/**
 * Implements hook_uninstall().
 */
function uitdatabank_uninstall() {

  // Remove default image.
  $fid = \Drupal::config('uitdatabank.settings.defaults')->get('image');
  if ($fid) {
    file_delete($fid);
  }

  \Drupal::configFactory()->getEditable('uitdatabank.settings.defaults')->delete();
  \Drupal::configFactory()->getEditable('uitdatabank.settings')->delete();

  // Delete all uitdatabank managed files.
  // @todo: check if necessary.
}
